<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/black">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nFeatures"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <!-- List of Features -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Categories of movies/series"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- List of movies by categories and authors"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Details of movies and series"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Featured movies and series"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Watch the trailer of a movie or series"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- List of favorite movies and series (managed in a local database)"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- About view containing the application's features, LinkedIn profiles of group members, and a list of libraries used"
                        android:paddingBottom="4dp"/>

                </LinearLayout>

                <!-- Group Members' LinkedIn Profiles -->
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nGroup Members' LinkedIn Profiles:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>


            </RelativeLayout>
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nFeatures"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>


            <!-- Marwane's LinkedIn Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/marwaneProfileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/marwane"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/marwaneLinkedInIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/linkedin_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/marwaneLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/marwaneLinkedInIcon"
                    android:autoLink="web"
                    android:textStyle="bold"
                    android:text="Yassine BERRIRI:  www.linkedin.com/in/yassine"
                    android:onClick="openLinkedInProfile"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/yassineProfileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/yassine"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/yassineLinkedInIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/linkedin_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/yassineLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/yassineLinkedInIcon"
                    android:autoLink="web"
                    android:textStyle="bold"
                    android:text="Yassine BERRIRI:  www.linkedin.com/in/yassine"
                    android:onClick="openLinkedInProfile"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/badisProfileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/badis"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/badisLinkedInIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/linkedin_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/badisLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/badisLinkedInIcon"
                    android:autoLink="web"
                    android:textStyle="bold"
                    android:text="Badis BOUCHEFFA :  www.linkedin.com/in/yassine"
                    android:onClick="openLinkedInProfile"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/ibrahimProfileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ibrahim"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ibrahimLinkedInIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/linkedin_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/ibrahimLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/ibrahimLinkedInIcon"
                    android:autoLink="web"
                    android:textStyle="bold"
                    android:text="Ibrahim KRIMI :  www.linkedin.com/in/yassine"
                    android:onClick="openLinkedInProfile"/>
            </RelativeLayout>
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nLibrairies utilisées"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <!-- List of Features -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Navigation-fragment"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Hilt : Injection de dépendances"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Moshi : Sérialisation et Désérialisation JSON"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Retrofit: Consommer des web services"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Coil : Pour afficher les images"
                        android:paddingBottom="4dp"/>

                </LinearLayout>

            </RelativeLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />


        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>